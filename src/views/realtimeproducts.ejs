<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>Home</title>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <h2 class="text-center">Real Time Products</h2>
    <hr>

    <section class="py-4">

        <div class="container">
            <h2 class="mb-4">Productos</h2>
            <!-- Button trigger modal -->
            <button type="button" class="mb-4 btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Agregar Producto
            </button>
            <div class="row" id="containerProductos">
                <% for (let i=0; i < productos.length; i++) { %>
                    <div class="col-md-4 my-3">
                        <div class="card">
                            <img src="assets/img/<%= productos[i].thumbnails[0] %>" class="card-img-top"
                                alt="Product 1">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= productos[i].title %>
                                </h5>
                                <p class="card-text">
                                    <%= productos[i].description %>
                                </p>
                                <a href="#" class="btn btn-danger btn-eliminar" id="<%= productos[i].id %>">Eliminar</a>
                            </div>
                        </div>
                    </div>
                    <% } %>


            </div>
        </div>
    </section>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar producto</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body py-4">
                    <form class="w-75 mx-auto" action="" id="formAgregar">

                        <div class="mb-3">
                            <label class="form-label" for="inputTitulo">Título</label>
                            <input type="text" id="inputTitulo" class="form-control">
                        </div>

                        
                        <div class="mb-3">
                            <label class="form-label" for="inputImagen">Url imagen</label>
                            <input type="text" id="inputImagen" class="form-control">
                        </div>

                        
                        <div class="mb-3">
                            <label class="form-label" for="inputDescripcion">Descripción</label>
                            <textarea class="form-control" id="inputDescripcion"></textarea>
                        </div>

                        <button id="btnGuardar" type="submit" class="btn btn-primary">Guardar</button>
                    </form>
                </div>
             
            </div>
        </div>
    </div>


    <!-- BOOTSTRAP JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <!-- SOCKET IO CLIENTE-->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/realtimeproducts.js"></script>
</body>

</html>